doctype html
html(lang="ja", ng-app="kitd")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
    meta(http-equiv="Cache-Control", content="no-cache")
    meta(http-equiv="Pragma", content="no-cache")
    link(href="css/ratchet.min.css", rel="stylesheet")
    link(href="css/app.css", rel="stylesheet")
    script(src="js/vendor.js")
    script(src="js/app.js")
    title SavageApp
  body

    .bar.bar-nav
      h1.title SavageApp

    .content.content-padded(ng-view)
      script(id="main.jade", type="text/ng-template")
        include contents/main.jade
      script(id="contents/team.jade", type="text/ng-template")
        include contents/team.jade
      script(id="contents/spy.jade", type="text/ng-template")
        include contents/spy.jade

    .bar.bar-tab
      a.tab-item.active(href="#/")
        span.icon.icon-home
        span.tab-label メンバー
      a.tab-item(class="", href="#/team/")
        span.icon.icon-list
        span.tab-label チーム分け
      a.tab-item(class="", href="#/spy/")
        span.icon.icon-person
        span.tab-label スパイ戦

